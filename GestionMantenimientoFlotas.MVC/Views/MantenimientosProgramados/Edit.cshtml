                <label asp-for="TipoMantenimiento" class="control-label"></label>
                <input asp-for="TipoMantenimiento" class="form-control" />
                <span asp-validation-for="TipoMantenimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CamionId" class="control-label"></label>
                <select asp-for="CamionId" class="form-control" asp-items="ViewBag.Camiones">
					<option value="">Seleccione un camión</option>
                    </select>
                <span asp-validation-for="CamionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TallerId" class="control-label"></label>
                <select asp-for="TallerId" class="form-control" asp-items="ViewBag.Talleres">
                    <option value="">Seleccione un taller</option>
                </select>
                <span asp-validation-for="TallerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

